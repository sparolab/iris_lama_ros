<launch>
  <!-- Arguments -->
  <arg name="map_file" default="$(find sparo_2d_navigation)/maps/lama_yjlink_factory2.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <!-- OMO R1 -->
  <!-- <include file="$(find omo_r1_bringup)/launch/omo_r1_remote.launch"/> -->

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find iris_lama_ros)/launch/loc2d.launch"/>

  <!-- move_base -->
  <include file="$(find sparo_2d_navigation)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>
  
  <node pkg="rviz" type="rviz" name="rviz" required="true" args="-d $(find sparo_2d_navigation)/rviz/sparo_2d_navigation.rviz"/>
</launch>
